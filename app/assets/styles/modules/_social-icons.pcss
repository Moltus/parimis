.social-icons {
  text-align: center;

  &__icon {
    width: 60px;
    height: 60px;
    margin: 15px 5px;
    box-shadow: 0 0 0 grey;
    transition: box-shadow 200ms;
    

    &:hover {
    box-shadow: 5px 5px 0 grey;
    }

    @mixin atSmall {
      width: 80px;
      height: 80px; 
    }
    
  }

  
}