.catchphrase {
  font-family: 'parisienneregular', 'Segoe UI', sans-serif;
  text-align: center;
  overflow: hidden;

  &__title { 
    font-size: 1.6rem;
    font-weight: 200;

    @mixin atMedium {
      font-size: 2.5rem;
    }

  }

  &__subtitle {
    font-size: 1.6rem;
    margin-top: 0;
    font-weight: 200;

    @mixin atMedium {
      font-size: 2rem;
    }

     
  }

  &__line-top {
    width: 80%;
  }

  &__line-bottom {
    margin-top: 1em;
    width: 60%;
  }
}