.page-section {
  padding: 1.2rem 0;
  color: $dkBlue;

  @mixin atMedium {
    padding: 4.5rem 0;
  }

  &--no-padding {
    padding: 0;
  }

  &--padding-top {
    padding-top: 100px;
  }

  &--grid3 {  

    @mixin atSmall {
    }

    @mixin atMedium {
      display: grid;
      grid-template-columns: 1fr 1fr 1fr;
      grid-gap: 50px;
      }
  }

  &--teal {
    background-color: $teal;
    color: #000;
  }
  &--ltGold {
    background-color: $ltGold;
    color: #000;
  }

  &--dkBlue {
    background-color: $dkBlue;
    color: #fff;
  }

  &--dkGold {
    background-color: $dkGold;
    color: #000;
  }

  &__image {
    width: 100%;
  }
}