.primary-nav {
  position: absolute;
  width: 100%;
  height: auto;
  top: 50px;
  left: 0;
  visibility: hidden;
  opacity: 0;
  transition: .5s;
  background-color: $dkBlue;


  &.active {
    visibility: visible;
    opacity: 1;
  }

    ul {
      display: block;
      margin: 0;
      padding: 0;
      text-align: center;
    }

    ul li {
      list-style: none;
      position: relative;
    }

    ul li.primary-nav__submenu:before {
      content: '';
      position: absolute;
    }

    ul li a {
      text-decoration: none;
      font-weight: 400;
      border-bottom: 1px solid rgba(0,0,0,.2);
      /* height: 50px;
      line-height: 50px; */
      padding: 17px 10px 15px 10px;
      color: $ltGold;
      display: block;
    }
    

    ul li.active {
      /* background-color: $ltBlue; */
    }

    ul li ul {
      position: absolute;
      /* width: 150px; */
      /* background-color: rgba(200, 200, 200, var(--headerOpacity)); */
      left: 0;
      display: none;
      
    }

    ul li.active ul {
      position: relative;
      background-color: $greyBlue;
      color: $dkGold;
      display: block;
      
    }
    ul li.active ul li a {
      color: $ltGold;
    }

    ul li ul li {
      display: block;
    }

    &__arrow-down {
      display: inline-block;
      margin-left: 5px;
      padding-bottom: 2px;
      width: 0;
      border-left: 6px solid transparent;
      border-right: 6px solid transparent;
      border-top: 6px solid $ltGold;
    }
  
  @mixin atMedium {
    background-color: transparent;
    visibility: initial;
    opacity: initial;
    position: static;
    width: initial;
    height: initial;

    &__submenu:hover ul {
      display: block;
    }

    ul {
      display: flex;
    }

    ul li.active {
      background-color: $dkBlue;
    }

    ul li.active ul {
      position: absolute;
      /* background-color: #fff; */
    }

    ul li.active ul li a{
      color: $ltGold;
    }
    ul li a {
      border: none;
    }
    
    & ul li a:after {
      display: block;
      content: '';
      padding-top: 2px;
      border-bottom: 2px solid $ltGold;
      transform: scaleX(0);
      transition: transform 250ms;
    }
    & ul li a:hover:after {
      transform: scaleX(1);
    }

    ul li ul {
      width: 150px;
      left: -15px; 
    }

    ul li ul li {
      background-color: $dkBlue;
      border-left: 1px solid rgba(255,255,255,.2);
      border-right: 1px solid rgba(255,255,255,.2);
      border-bottom: 1px solid rgba(255,255,255,.2);
    }

    ul li ul li a{
      display: inline-block;
      border-top: none;
    }



    /* ul li ul li a:hover {
      background-color: rgba(255, 255, 255, var(--headerOpacity));
    } */

    
  }

}