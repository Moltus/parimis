.generic-content-container {

  p {
    font-weight: 300;
    line-height: 1.65;
    margin: 0 0 1.8rem 0;

    @mixin atSmall {
      font-size: 1.125rem;
    }
  }
  
  &--big-first {
    p::first-letter {
    font-size: 2em;
    line-height: 1em;
    }
  }
  

  p a {
    font-weight: 700;
    text-decoration: none;
    border-bottom: 1px solid $dkGold;
  }
}