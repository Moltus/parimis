.btn {
  background-color: $dkBlue;
  color: #fff;
  text-decoration: none;
  padding: .65rem 1.1rem;
  display: inline-block;

  &--gold {
    background-color: $dkGold;
    border: 2px solid $dkGold;
    transition: all 500ms;
    &:hover {
      background-color: #fff;
      color: $dkGold;
    }
  }
  
  &--small {
    padding: .4rem .8rem;
  }

  &--large {
    padding: 1.1rem 1.9rem;

    @mixin atSmall {
      font-size: 1.25rem;
    }
  }
  
}